<Window x:Class="DesktopCustomizer.SystemInfoWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Info" 
        Width="280" Height="150"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Border x:Name="MainBorder" 
            Background="#1E1E1E" 
            CornerRadius="10" 
            BorderBrush="#404040" 
            BorderThickness="1"
            Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="315" 
                            ShadowDepth="5" 
                            BlurRadius="10" 
                            Opacity="0.5"/>
        </Border.Effect>
        
        <StackPanel Margin="15">
            <TextBlock Text="System Monitor" 
                      FontSize="16" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,10"/>
            
            <!-- CPU Usage -->
            <StackPanel Margin="0,5">
                <TextBlock x:Name="CpuText" 
                          Text="CPU: 0%" 
                          Foreground="White" 
                          FontSize="12" 
                          Margin="0,0,0,2"/>
                <ProgressBar x:Name="CpuProgress" 
                           Height="8" 
                           Background="#2D2D2D" 
                           Foreground="#0078D4" 
                           BorderThickness="0" 
                           Maximum="100" 
                           Value="0"/>
            </StackPanel>
            
            <!-- RAM Usage -->
            <StackPanel Margin="0,5">
                <TextBlock x:Name="RamText" 
                          Text="RAM: 0%" 
                          Foreground="White" 
                          FontSize="12" 
                          Margin="0,0,0,2"/>
                <ProgressBar x:Name="RamProgress" 
                           Height="8" 
                           Background="#2D2D2D" 
                           Foreground="#0078D4" 
                           BorderThickness="0" 
                           Maximum="100" 
                           Value="0"/>
            </StackPanel>
            
            <!-- Disk Usage -->
            <StackPanel Margin="0,5">
                <TextBlock x:Name="DiskText" 
                          Text="Disk: 0%" 
                          Foreground="White" 
                          FontSize="12" 
                          Margin="0,0,0,2"/>
                <ProgressBar x:Name="DiskProgress" 
                           Height="8" 
                           Background="#2D2D2D" 
                           Foreground="#0078D4" 
                           BorderThickness="0" 
                           Maximum="100" 
                           Value="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>